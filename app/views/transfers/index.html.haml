%h1
  Transfers
  = render 'shared/family_switch'
  = link_to 'Add New Transfer', 'javascript:void(0)', class: 'button primary float-right', data: {open: 'ajax-reveal', url: new_transfer_path}

%table.striped.hover.table-striped.stack
  %thead
    %tr
      - if current_user.admin?
        %th Id
        %th User
      %th Amount
      %th Description
      %th Source account
      %th Destination account
      - if current_user.admin?
        %th Created at
        %th Updated at
      %th Actions

  %tbody
    - @transfers.each do |transfer|
      %tr
        - if current_user.admin?
          %td= transfer.id
          %td= transfer.user.name
        %td= transfer.amount
        %td= transfer.description
        %td= transfer.source_account.name
        %td= transfer.destination_account.name
        - if current_user.admin?
          %td= transfer.created_at
          %td= transfer.updated_at
        %td
          .button-group
            = link_to 'Show', 'javascript:void(0)', class: 'button success', data: {open: 'ajax-reveal', url: transfer_path(transfer)}
            = link_to 'Edit', 'javascript:void(0)', class: 'button warning', data: {open: 'ajax-reveal', url: edit_transfer_path(transfer)}
            = link_to 'Delete', transfer, method: :delete, data: { confirm: 'Are you sure you want to delete this Transfer?' }, class: 'button alert'
