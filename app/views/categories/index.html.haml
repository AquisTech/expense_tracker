%h1
  Categories
  = link_to 'Add New Category', 'javascript:void(0)', class: 'button primary float-right', data: {open: 'ajax-reveal', url: new_category_path}

%table.striped.hover.table-striped.stack
  %thead
    %tr
      %th Id
      %th Name
      %th Created at
      %th Updated at
      %th Actions

  %tbody
    - @categories.each do |category|
      %tr
        %td= category.id
        %td= category.name
        %td= category.created_at
        %td= category.updated_at
        %td= render 'shared/table_row_action_buttons', object: category