= form_with(model: transfer, remote: true) do |f|
  - if transfer.errors.any?
    #error_explanation
      %h2= "#{pluralize(transfer.errors.count, "error")} prohibited this transfer from being saved:"
      %ul
        - transfer.errors.full_messages.each do |message|
          %li= message
  .row
    = f.label :amount
    = f.amount_field :amount, id: :transfer_amount, currency: '&#8377;'
  .row
    = f.label :description
    = f.text_field :description, id: :transfer_description
  .row
    = f.label :source_account_id
    = f.collection_select :source_account_id, SourceAccount.all, :id, :name, id: :transfer_source_account_id
  .row
    = f.label :destination_account_id
    = f.collection_select :destination_account_id, DestinationAccount.all, :id, :name, id: :transfer_destination_account_id
  - if transfer.persisted?
    .row
      = f.label :created_at
      .input-group
        = f.datetime_select :created_at, {order: [:day, :month, :year], date_separator: ' / '}, id: :transfer_created_at, class: 'input-group-field small-2', disabled: true
    .row
      = f.label :updated_at
      .input-group
        = f.datetime_select :updated_at, {order: [:day, :month, :year], date_separator: ' / '}, id: :transfer_updated_at, class: 'input-group-field small-2', disabled: true
  .row
    = f.submit transfer.new_record? ? 'Create' : 'Update', class: 'button success'
    = link_to 'Back', transfers_path, class: 'button warning'
