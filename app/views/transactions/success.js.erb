<%- if params[:action] == 'create' %>
  if($('<%= ".#{params[:transaction][:unique_id]}" %>' + ' select[name="transaction[transaction_purpose_id]"]').length) {
    $('<%= ".#{params[:transaction][:unique_id]}" %>').before("<%=j render 'home/transaction_form', transaction: new_transaction, transacted_at: transacted_at %>");
  }
<%- end %>
$('<%= ".#{params[:transaction][:unique_id]}" %>').prev('.flash-message').remove();
$('<%= ".#{params[:transaction][:unique_id]}" %>').before('<%=j flash_messages %>');
$('<%= ".#{params[:transaction][:unique_id]}" %>').replaceWith("<%=j render 'home/transaction_form', transaction: transaction, transacted_at: transacted_at %>");