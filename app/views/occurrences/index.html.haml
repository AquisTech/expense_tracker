%h1
  Occurrences
  = add_new_button('Add New Occurrence', new_occurrence_path)

%table.striped.hover.table-striped.stack
  %thead
    %tr
      %th Id
      %th Recurrence type
      %th Interval
      %th Days
      %th Weeks
      %th Months
      %th Starts on
      %th Ends on
      %th Count
      %th Recurrence rule
      %th Created at
      %th Updated at
      %th Actions

  %tbody
    - if @occurrences.present?
      - @occurrences.each do |occurrence|
        %tr
          %td= occurrence.id
          %td= occurrence.recurrence_type
          %td= occurrence.interval
          %td= occurrence.days
          %td= occurrence.weeks
          %td= occurrence.months
          %td= occurrence.starts_on
          %td= occurrence.ends_on
          %td= occurrence.count
          %td= occurrence.recurrence_rule.humanize
          %td= occurrence.created_at
          %td= occurrence.updated_at
          %td= render 'shared/table_row_action_buttons', object: occurrence
    - else
      %tr
        %td.text-center{colspan: 13}= 'No records found'
