.button-group
  = link_to 'Show', 'javascript:void(0)', class: 'button success', data: {open: 'ajax-reveal', url: url_for(object)}
  = link_to 'Edit', 'javascript:void(0)', class: 'button warning', data: {open: 'ajax-reveal', url: url_for(action: :edit, id: object)}
  = link_to 'Delete', object, method: :delete, data: { confirm: "Are you sure you want to delete this #{object.class.name}?" }, class: 'button alert'