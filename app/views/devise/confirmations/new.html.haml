= render layout: 'devise/shared/devise_layout' do
  .large-12.columns
    = form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post}) do |f|
      .row
        %h5.text-center
          = t('.resend_confirmation_instructions', :default => 'Resend confirmation instructions')
      .row
        = f.email_field :email, autofocus: true, class: "large-12 columns", placeholder: "Email"
      .row
        = f.submit t('.resend_confirmation_instructions', :default => 'Resend confirmation instructions'), class: "button expanded large-12 large-centered columns"
