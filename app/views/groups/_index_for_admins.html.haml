%h1
  Groups
  = add_new_button('Add New Group', new_group_path)

.table-scroll
  %table.striped.hover.table-striped.stack
    %thead
      %tr
        %th Id
        %th Owner
        %th Name
        %th Default
        %th Created at
        %th Updated at
        %th Actions

    %tbody
      - @groups.each do |group|
        %tr
          %td= group.id
          %td= group.owner.name
          %td= group.name
          %td= group.default
          %td= group.created_at
          %td= group.updated_at
          %td= render 'shared/table_row_action_buttons', object: group
#pagy= pagy_foundation_combo_nav_js(@pagy).html_safe