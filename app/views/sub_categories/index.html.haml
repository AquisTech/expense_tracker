%h1 Sub Categories
%span= link_to 'Add New Sub Category', 'javascript:void(0)', class: 'button primary float-right', data: {open: 'ajax-reveal', url: new_sub_category_path}

%table.striped.hover.table-striped.stack
  %thead
    %tr
      %th Id
      %th Name
      %th Category
      %th Created at
      %th Updated at
      %th Actions

  %tbody
    - @sub_categories.each do |sub_category|
      %tr
        %td= sub_category.id
        %td= sub_category.name
        %td= sub_category.category_id
        %td= sub_category.created_at
        %td= sub_category.updated_at
        %td
          .button-group
            = link_to 'Show', 'javascript:void(0)', class: 'button success', data: {open: 'ajax-reveal', url: sub_category_path(sub_category)}
            = link_to 'Edit', 'javascript:void(0)', class: 'button warning', data: {open: 'ajax-reveal', url: edit_sub_category_path(sub_category)}
            = link_to 'Delete', sub_category, method: :delete, data: { confirm: 'Are you sure you want to delete this Sub Category?' }, class: 'button alert'
