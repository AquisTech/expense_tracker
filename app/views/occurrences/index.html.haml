%h1 Occurrences
%span= link_to 'Add New Occurrence', 'javascript:void(0)', class: 'button primary float-right', data: {open: 'ajax-reveal', url: new_occurrence_path}

%table.striped.hover.table-striped.stack
  %thead
    %tr
      %th Id
      %th Recurrence type
      %th Interval
      %th Days
      %th Weeks
      %th Months
      %th Starts on
      %th Ends on
      %th Count
      %th Recurrence rule
      %th Created at
      %th Updated at
      %th Actions

  %tbody
    - @occurrences.each do |occurrence|
      %tr
        %td= occurrence.id
        %td= occurrence.recurrence_type
        %td= occurrence.interval
        %td= occurrence.days
        %td= occurrence.weeks
        %td= occurrence.months
        %td= occurrence.starts_on
        %td= occurrence.ends_on
        %td= occurrence.count
        %td= occurrence.recurrence_rule
        %td= occurrence.created_at
        %td= occurrence.updated_at
        %td
          .button-group
            = link_to 'Show', 'javascript:void(0)', class: 'button success', data: {open: 'ajax-reveal', url: occurrence_path(occurrence)}
            = link_to 'Edit', 'javascript:void(0)', class: 'button warning', data: {open: 'ajax-reveal', url: edit_occurrence_path(occurrence)}
            = link_to 'Delete', occurrence, method: :delete, data: { confirm: 'Are you sure you want to delete this Occurrence?' }, class: 'button alert'
