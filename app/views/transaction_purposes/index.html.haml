%h1
  Transaction Purposes
  = render 'shared/family_switch'
  = link_to 'Add New Transaction Purpose', 'javascript:void(0)', class: 'button primary float-right', data: {open: 'ajax-reveal', url: new_transaction_purpose_path}

%table.striped.hover.table-striped.stack
  %thead
    %tr
      - if current_user.admin?
        %th Id
      - if family_view?
        %th User
      %th Name
      %th Sub category
      %th Estimate
      - if current_user.admin?
        %th Created at
        %th Updated at
      %th Actions

  %tbody
    - @transaction_purposes.each do |transaction_purpose|
      %tr
        - if current_user.admin?
          %td= transaction_purpose.id
        - if family_view?
          %td= transaction_purpose.user.name
        %td= transaction_purpose.name
        %td= transaction_purpose.sub_category.name_with_category
        %td{ class: transaction_purpose.credit? ? 'text-success' : 'text-alert' }
          = transaction_purpose.sign
          = transaction_purpose.estimate
        - if current_user.admin?
          %td= transaction_purpose.created_at
          %td= transaction_purpose.updated_at
        %td
          .button-group
            = link_to 'Show', 'javascript:void(0)', class: 'button success', data: {open: 'ajax-reveal', url: transaction_purpose_path(transaction_purpose)}
            = link_to 'Edit', 'javascript:void(0)', class: 'button warning', data: {open: 'ajax-reveal', url: edit_transaction_purpose_path(transaction_purpose)}
            = link_to 'Delete', transaction_purpose, method: :delete, data: { confirm: 'Are you sure you want to delete this Transaction Purpose?' }, class: 'button alert'
