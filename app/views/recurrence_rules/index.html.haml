%h1 Recurrence Rules
%span= link_to 'Add New Recurrence Rule', 'javascript:void(0)', class: 'button primary float-right', data: {open: 'ajax-reveal', url: new_recurrence_rule_path}

%table.striped.hover.table-striped.stack
  %thead
    %tr
      %th Id
      %th Type
      %th Interval
      %th Starts on
      %th Ends on
      %th Count
      %th Rules
      %th Transaction purpose
      %th Created at
      %th Updated at
      %th Actions

  %tbody
    - @recurrence_rules.each do |recurrence_rule|
      %tr
        %td= recurrence_rule.id
        %td= recurrence_rule.type
        %td= recurrence_rule.interval
        %td= recurrence_rule.starts_on
        %td= recurrence_rule.ends_on
        %td= recurrence_rule.count
        %td= recurrence_rule.rules
        %td= recurrence_rule.transaction_purpose.name
        %td= recurrence_rule.created_at
        %td= recurrence_rule.updated_at
        %td
          .button-group
            = link_to 'Show', 'javascript:void(0)', class: 'button success', data: {open: 'ajax-reveal', url: recurrence_rule_path(recurrence_rule)}
            = link_to 'Edit', 'javascript:void(0)', class: 'button warning', data: {open: 'ajax-reveal', url: edit_recurrence_rule_path(recurrence_rule)}
            = link_to 'Delete', recurrence_rule, method: :delete, data: { confirm: 'Are you sure you want to delete this Recurrence Rule?' }, class: 'button alert'
