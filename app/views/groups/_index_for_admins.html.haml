%h1
  Groups
  = link_to 'Add New Group', 'javascript:void(0)', class: 'button primary float-right', data: {open: 'ajax-reveal', url: new_group_path}

.table-scroll
  %table.striped.hover.table-striped.stack
    %thead
      %tr
        %th Id
        %th Name
        %th Default
        %th Created at
        %th Updated at
        %th Actions

    %tbody
      - @groups.each do |group|
        %tr
          %td= group.id
          %td= group.name
          %td= group.default
          %td= group.created_at
          %td= group.updated_at
          %td
            .button-group
              = link_to 'Show', 'javascript:void(0)', class: 'button success', data: {open: 'ajax-reveal', url: group_path(group)}
              = link_to 'Edit', 'javascript:void(0)', class: 'button warning', data: {open: 'ajax-reveal', url: edit_group_path(group)}
              = link_to 'Delete', group, method: :delete, data: { confirm: 'Are you sure you want to delete this Group?' }, class: 'button alert'